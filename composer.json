{
    "name": "pakypc/xml-mintrud",
    "type": "library",
    "description": "генератор документа для минтруд",
    "license": "BSD-3-Clause",
    "require": {
        "php": "^8.1",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.2",
        "vimeo/psalm": "^6.10",
        "spiral/code-style": "^2.2"
    },
    "autoload": {
        "psr-4": {
            "Pakypc\\XMLMintrud\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/Unit",
            "crm\\models\\": "tests/Model"
        }
    },
    "authors": [
        {
            "name": "kaelforn",
            "email": "kaelforn@gmail.com"
        }
    ],
    "scripts": {
        "cs:diff": "php-cs-fixer fix --dry-run -v --diff",
        "cs:fix": "php-cs-fixer fix -v",
        "psalm": "psalm"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
